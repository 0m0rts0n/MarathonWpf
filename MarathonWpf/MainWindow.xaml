<Window x:Class="MarathonWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonWpf"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="200" Width="250">
    <Grid>
        <GroupBox Header="Авторизация" FontSize="16px">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="LoginTB" HorizontalAlignment="Left" Height="23" Margin="65,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155"/>
                <PasswordBox x:Name="PasswordTB" HorizontalAlignment="Left" Height="23" Margin="65,38,0,0" VerticalAlignment="Top" Width="155"/>
            </Grid>
        </GroupBox>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="17,31,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="17,58,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginBtn" Content="Войти" FontSize="24px" Margin="50,105,50,20" Click="LoginBtn_Click" />
